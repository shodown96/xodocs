{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": false,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
