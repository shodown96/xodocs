{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "typeRoots": ["src/types", "./node_modules/@types"],
        "resolveJsonModule": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/types/**/*.d.ts", "**/*.ts", "**/*.tsx"]
}
